{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./src",
    "types": ["jest", "testing-library__jest-dom"],
    "paths": {
      "~app/*": ["app/*"],
      "~atoms/*": ["atoms/*"],
      "~context/*": ["context/*"],
      "~hooks/*": ["hooks/*"],
      "~molecules/*": ["molecules/*"],
      "~organisms/*": ["organisms/*"],
      "~pages/*": ["pages/*"],
      "~routes/*": ["routes/*"],
      "~templates/*": ["templates/*"],
      "~utils/*": ["utils/*"]
    },
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "jest.config.js", "jest.setup.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
